{
    "manifest_version": 3,
    "name": "CleanMyKeyboard",
    "version": "1.0",
    "description": "Block keyboard input so you can clean your keyboard safely.",
    "permissions": ["scripting", "activeTab", "storage"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon.png",
        "48": "icons/icon.png",
        "128": "icons/icon.png"
    }
  }